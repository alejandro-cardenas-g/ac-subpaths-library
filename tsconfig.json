{
  "compilerOptions": {
    "rootDir": "src/",
    "outDir": "dist/",
    "target": "ES6",
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react",
    "module": "ESNext",
    "declaration": true,
    "declarationDir": "types/",
    "sourceMap": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "emitDeclarationOnly": true,
    "resolveJsonModule": true
  }
}
